<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0099CC"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <ScrollView
        android:layout_centerVertical="false"
    	android:layout_centerHorizontal="true"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" 
        android:gravity="center">

		<!--  Layout for adding a shadow border (by using the @android:drawable/toast_frame) for the login window -->
		<LinearLayout
			android:layout_height="wrap_content" 
			android:layout_width="300dp"
			android:orientation="vertical"
			android:layout_marginTop="10dp"
			android:layout_margin="12dp"
			android:padding="10dp"
			android:layout_gravity="center"
			android:layout_centerVertical="false"
	    	android:layout_centerHorizontal="true"
			android:background="#FFFFFF">	
										
			<ImageView
				android:id="@+id/logo" 
				android:src="@drawable/sample_logo"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"						
				android:layout_marginTop="6dp"
				android:layout_marginBottom="6dp" />

			<LinearLayout
		        android:id="@+id/llHexCode"
				android:layout_height="50dp" 
				android:layout_width="275dp"
				android:orientation="vertical"
				android:layout_marginTop="10dp"
				android:layout_margin="12dp"
				android:padding="10dp"
				android:layout_gravity="center"
				android:layout_centerVertical="false"
		    	android:layout_centerHorizontal="true"
				android:background="#000000"
				android:clickable="true">	
				
		         <TextView
				    style="@style/viewStyle"
				    android:textSize="16dp"
				    android:textColor="#ffffff"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="center"
				    android:paddingLeft="4dp"
				    android:paddingBottom="2dp"
				    android:layout_marginBottom="2dp"
				    android:text="Select Toaster Background Color" />
		         
		          <TextView
				    style="@style/viewStyle"
				    android:textSize="12dp"
				    android:textColor="#ffffff"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="center"
				    android:paddingLeft="4dp"
				    android:paddingBottom="2dp"
				    android:layout_marginBottom="2dp"
				    android:text="Selected Hexcode: N/A" 
				    android:id="@+id/txtBGColor"/>
		        
			</LinearLayout>
			
			<LinearLayout
		        android:id="@+id/llTxtHexCode"
				android:layout_height="50dp" 
				android:layout_width="275dp"
				android:orientation="vertical"
				android:layout_marginTop="10dp"
				android:layout_margin="12dp"
				android:padding="10dp"
				android:layout_gravity="center"
				android:layout_centerVertical="false"
		    	android:layout_centerHorizontal="true"
				android:background="#000000"
				android:clickable="true">	
				
		         <TextView
				    style="@style/viewStyle"
				    android:textSize="16dp"
				    android:textColor="#ffffff"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="center"
				    android:paddingLeft="4dp"
				    android:paddingBottom="2dp"
				    android:layout_marginBottom="2dp"
				    android:text="Select Toaster Text Color" />
		         
		          <TextView
				    style="@style/viewStyle"
				    android:textSize="12dp"
				    android:textColor="#ffffff"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="center"
				    android:paddingLeft="4dp"
				    android:paddingBottom="2dp"
				    android:layout_marginBottom="2dp"
				    android:text="Selected Hexcode: N/A" 
				    android:id="@+id/txtMessageColor"/>
		        
			</LinearLayout>
									    
			<!--  
			
			<TextView
			    style="@style/viewStyle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:paddingLeft="4dp"
			    android:paddingBottom="2dp"
			    android:layout_marginBottom="2dp"
			    android:text="Set Toaster Background Color:" />
		
			<EditText
			    style="@style/viewStyle"
		        android:id="@+id/txtHexCode"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:ems="10"
		        android:hint="enter hex code..." />
		        
		    -->
			
			<TextView
			    style="@style/viewStyle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:paddingLeft="4dp"
			    android:paddingBottom="2dp"
			    android:layout_marginBottom="2dp"
			    android:text="Set Toaster Duration:" />
			
			 <EditText
			    style="@style/viewStyle"
		        android:id="@+id/txtDuration"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="toaster duration..."
		        android:inputType="numberSigned" />
					
			 <TextView
			    style="@style/viewStyle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:paddingLeft="4dp"
			    android:paddingBottom="2dp"
			    android:layout_marginBottom="2dp"
			    android:text="Set Toaster Message:" />
			 
			 <EditText
			    style="@style/viewStyle"
		        android:id="@+id/txtMessage"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="toaster text..." /> 		 
			 
			 <!--  
			 <TextView
			    style="@style/viewStyle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:paddingLeft="4dp"
			    android:paddingBottom="2dp"
			    android:layout_marginBottom="2dp"
			    android:text="Set Toaster Text Color:" />
			 
			 <EditText
			    style="@style/viewStyle"
		        android:id="@+id/txtMessageColor"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="enter hex code..." />	
		        
		        -->
		        
			 <Spinner
		        android:id="@+id/spinnerFontAwesome"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		
		    <Spinner
		        android:id="@+id/spinnerFontAwesomeSpeed"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		    
		     <Spinner
		        android:id="@+id/spinnerSelectFont"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		    
		    <Button
		        android:id="@+id/btnGetImage"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_centerHorizontal="true"
		        android:layout_marginBottom="4dp"
		        android:text="Get Icon to Use" />
		    
		    <Button
		        android:id="@+id/btnDisplayToast"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_centerHorizontal="true"
		        android:layout_marginBottom="4dp"
		        android:text="Toast it!" />
						
		</LinearLayout>
		
	</ScrollView>
	
</LinearLayout>