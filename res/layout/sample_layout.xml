<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0099CC"
    android:gravity="center_horizontal"
    android:orientation="vertical" > <!-- #0099CC -->
    
    <ScrollView
        android:layout_centerVertical="false"
    	android:layout_centerHorizontal="true"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" 
        android:gravity="center">

		<!--  Layout for adding a shadow border (by using the @android:drawable/toast_frame) for the login window -->
		<LinearLayout
			android:layout_height="wrap_content" 
			android:layout_width="300dp"
			android:orientation="vertical"
			android:layout_marginTop="10dp"
			android:layout_margin="12dp"
			android:padding="10dp"
			android:layout_gravity="center"
			android:layout_centerVertical="false"
	    	android:layout_centerHorizontal="true"
	    	android:background="#FFFFFF"
			> <!--  -->	
										
			<ImageView
				android:id="@+id/logo" 
				android:src="@drawable/sample_logo"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"						
				android:layout_marginTop="6dp"
				android:layout_marginBottom="6dp" />

			<LinearLayout
			    android:alpha="0.7"
		        android:id="@+id/llHexCode"
				android:layout_height="wrap_content" 
				android:layout_width="275dp"
				android:orientation="horizontal"
				android:layout_margin="4dp"
				android:padding="10dp"
				android:layout_gravity="center"
				android:layout_centerVertical="false"
		    	android:layout_centerHorizontal="true"
				android:background="#6F6E6E"
				android:clickable="true">	

		         <LinearLayout
			        android:id="@+id/ll1"
					android:layout_height="wrap_content" 
					android:layout_width="210dp"
					android:orientation="vertical">
					
		              <TextView
						    style="@style/viewStyle"
						    android:textSize="16dp"
						    android:textColor="#ffffff"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:paddingLeft="4dp"
						    android:paddingBottom="2dp"
						    android:layout_marginBottom="2dp"
						    android:text="Select Toaster Back Color" />
		             
		              <TextView
						    style="@style/viewStyle"
						    android:textSize="12dp"
						    android:textColor="#ffffff"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:padding="4dp"
						    android:paddingBottom="2dp"
						    android:layout_marginBottom="2dp"
						    android:text="Selected Hexcode: N/A" 
						    android:id="@+id/txtBGColor"/>
		          
			          
		             
		         </LinearLayout>
		         
		         <LinearLayout  
			              	android:orientation="vertical"
				            android:background="#000000"
				            android:paddingLeft="8dp"
				            android:id="@+id/canBGColor"
				            android:layout_width="fill_parent"
						    android:layout_height="fill_parent"/>
		         
		        
			</LinearLayout>
			
			<LinearLayout
			    android:alpha="0.7"
		        android:id="@+id/llTxtHexCode"
				android:layout_height="wrap_content" 
				android:layout_width="275dp"
				android:orientation="horizontal"
				android:layout_margin="4dp"
				android:padding="10dp"
				android:layout_gravity="center"
				android:layout_centerVertical="false"
		    	android:layout_centerHorizontal="true"
				android:background="#6F6E6E"
				android:clickable="true">	

		         <LinearLayout
			        android:id="@+id/ll1"
					android:layout_height="wrap_content" 
					android:layout_width="210dp"
					android:orientation="vertical">
					
		              <TextView
						    style="@style/viewStyle"
						    android:textSize="16dp"
						    android:textColor="#ffffff"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:paddingLeft="4dp"
						    android:paddingBottom="2dp"
						    android:layout_marginBottom="2dp"
						    android:text="Select Toaster Text Color" />
		             
		              <TextView
						    style="@style/viewStyle"
						    android:textSize="12dp"
						    android:textColor="#ffffff"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:padding="4dp"
						    android:paddingBottom="2dp"
						    android:layout_marginBottom="2dp"
						    android:text="Selected Hexcode: N/A" 
						    android:id="@+id/txtMessageColor"/>
		          
			          
		             
		         </LinearLayout>
		         
		         <LinearLayout  
			              	android:orientation="vertical"
				            android:background="#ffffff"
				            android:paddingLeft="8dp"
				            android:id="@+id/canMessageColor"
				            android:layout_width="fill_parent"
						    android:layout_height="fill_parent"/>
		         
		        
			</LinearLayout>
			
			<LinearLayout
			    android:alpha="0.7"
		        android:id="@+id/llToasterMessage"
				android:layout_height="wrap_content" 
				android:layout_width="275dp"
				android:orientation="vertical"
				android:layout_margin="4dp"
				android:padding="10dp"
				android:layout_gravity="center"
				android:layout_centerVertical="false"
		    	android:layout_centerHorizontal="true"
				android:background="#6F6E6E"
				android:clickable="true">	

		        
		              <TextView
						    style="@style/viewStyle"
						    android:textSize="16dp"
						    android:textColor="#ffffff"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:paddingLeft="4dp"
						    android:paddingBottom="2dp"
						    android:layout_marginBottom="2dp"
						    android:text="Change Toaster Message:" />
		             
		              <TextView
						    style="@style/viewStyle"
						    android:textSize="12dp"
						    android:textColor="#ffffff"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:padding="4dp"
						    android:paddingBottom="2dp"
						    android:layout_marginBottom="2dp"
						    android:text="Toasted!!!" 
						    android:id="@+id/txtMessage"/>

			</LinearLayout>
									    
